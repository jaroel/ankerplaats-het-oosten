---
import "tiny-slider/dist/tiny-slider.css";
import SectionRow from "./sectionRow.astro";
import TeamMember from "./teamMember.astro";

interface Props {
    id: string;
}
const { id } = Astro.props;

import imgMarjon from "~/assets/marjon.jpeg";
---

<script>
    import { tns } from "tiny-slider";
    tns({
        container: ".team_active",
        autoplay: true,
        autoplayTimeout: 5000,
        autoplayText: [" ", " "],
        mouseDrag: true,
        gutter: 0,
        nav: true,
        controls: false,
        controlsText: [
            '<i class="lni lni-chevron-left prev"></i>',
            '<i class="lni lni-chevron-right next"></i>',
        ],
        items: 1,

        responsive: {
            0: {
                items: 1,
            },
            768: {
                items: 2,
            },
            1050: {
                items: 3,
            },
        },
    });
</script>

<SectionRow
    id={id}
    sectionClass="team_area bg-gray pt-120 pb-120"
    sub_title="Team"
    main_title="Meet Our Team Members"
    rowClass="team_active"
>
    <TeamMember imageSrc={imgMarjon} title="Marjon Bruggink" description="" />
</SectionRow>

<!-- container -->
<style>
    .row {
        @apply flex flex-wrap;
    }
</style>
