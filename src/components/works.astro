---
interface Props {
    id: string;
}
const { id } = Astro.props;

import "tiny-slider/dist/tiny-slider.css";
import SectionRow from "./sectionRow.astro";
import WorkItem from "./workItem.astro";

import work1 from "~/assets/work-1.jpg";
import work2 from "~/assets/work-2.jpg";
import work3 from "~/assets/work-3.jpg";
import work4 from "~/assets/work-4.jpg";
import work5 from "~/assets/work-5.jpg";
---

<script>
    import { tns } from "tiny-slider";
    tns({
        container: ".work_active",
        autoplay: true,
        autoplayTimeout: 5000,
        autoplayText: [" ", " "],
        mouseDrag: true,
        gutter: 0,
        nav: true,
        controls: false,
        controlsText: ['<i class=" prev"></i>', '<i class=" next"></i>'],
        items: 5,

        responsive: {
            0: {
                items: 1,
            },
            570: {
                items: 2,
            },
            850: {
                items: 3,
            },
            1200: {
                items: 4,
            },
            1400: {
                items: 5,
            },
        },
    });
</script>

<SectionRow
    id={id}
    sub_title="Works"
    main_title="Some of Our Recent Works"
    sectionClass="bg-gray pt-120 pb-120"
    rowClass="work_active"
>
    <WorkItem imageSrc={work1} title="Marketing" description="NoCodeAPI" />
    <WorkItem imageSrc={work2} title="Creative Design" description="UIdeck" />
    <WorkItem imageSrc={work3} title="Web Design" description="GrayGrids" />
    <WorkItem imageSrc={work4} title="Analysis" description="Ayro UI" />
    <WorkItem imageSrc={work5} title="SMM" description="LineIcons" />
    <WorkItem imageSrc={work3} title="SEO" description="PageBulb" />

    <WorkItem
        imageSrc={work4}
        title="Mobile App"
        description="Rocket Internet LTD"
    />
</SectionRow>
