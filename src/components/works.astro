---
interface Props {
    id: string;
}
const { id } = Astro.props;

import "tiny-slider/dist/tiny-slider.css";
import SectionRow from "./sectionRow.astro";
import WorkItem from "./workItem.astro";

const BASE_URL = import.meta.env.BASE_URL;
---

<script>
    import { tns } from "tiny-slider";
    tns({
        container: ".work_active",
        autoplay: true,
        autoplayTimeout: 5000,
        autoplayText: [" ", " "],
        mouseDrag: true,
        gutter: 0,
        nav: true,
        controls: false,
        controlsText: ['<i class=" prev"></i>', '<i class=" next"></i>'],
        items: 5,

        responsive: {
            0: {
                items: 1,
            },
            570: {
                items: 2,
            },
            850: {
                items: 3,
            },
            1200: {
                items: 4,
            },
            1400: {
                items: 5,
            },
        },
    });
</script>

<SectionRow
    id={id}
    sub_title="Works"
    main_title="Some of Our Recent Works"
    sectionClass="bg-gray pt-120 pb-120"
    rowClass="work_active"
>
    <WorkItem
        imageSrc={BASE_URL + "images/work-1.jpg"}
        title="Marketing"
        description="NoCodeAPI"
    />
    <WorkItem
        imageSrc={BASE_URL + "images/work-2.jpg"}
        title="Creative Design"
        description="UIdeck"
    />

    <WorkItem
        imageSrc={BASE_URL + "images/work-3.jpg"}
        title="Web Design"
        description="GrayGrids"
    />

    <WorkItem
        imageSrc={BASE_URL + "images/work-4.jpg"}
        title="Analysis"
        description="Ayro UI"
    />

    <WorkItem
        imageSrc={BASE_URL + "images/work-5.jpg"}
        title="SMM"
        description="LineIcons"
    />

    <WorkItem
        imageSrc={BASE_URL + "images/work-3.jpg"}
        title="SEO"
        description="PageBulb"
    />

    <WorkItem
        imageSrc={BASE_URL + "images/work-4.jpg"}
        title="Mobile App"
        description="Rocket Internet LTD"
    />
</SectionRow>
