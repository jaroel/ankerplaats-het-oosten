---
interface Props {
    id: string;
}
const { id } = Astro.props;

import "tiny-slider/dist/tiny-slider.css";
import WorkItem from "./workItem.astro";
---

<script>
    import { tns } from "tiny-slider";
    tns({
        container: ".work_active",
        autoplay: true,
        autoplayTimeout: 5000,
        autoplayText: [" ", " "],
        mouseDrag: true,
        gutter: 0,
        nav: true,
        controls: false,
        controlsText: ['<i class=" prev"></i>', '<i class=" next"></i>'],
        items: 5,

        responsive: {
            0: {
                items: 1,
            },
            570: {
                items: 2,
            },
            850: {
                items: 3,
            },
            1200: {
                items: 4,
            },
            1400: {
                items: 5,
            },
        },
    });
</script>
<section id={id} class="bg-gray pt-120 pb-120">
    <div class="container">
        <div class="row justify-center">
            <div class="w-full lg:w-1/2">
                <div class="section_title text-center pb-6">
                    <h5 class="sub_title">Works</h5>
                    <h4 class="main_title">Some of Our Recent Works</h4>
                </div>
                <!-- section title -->
            </div>
        </div>
        <!-- row -->
    </div>
    <!-- container -->
    <div class="container-fluid">
        <div class="work_wrapper relative">
            <div class="row work_active">
                <WorkItem
                    imageSrc={`${import.meta.env.BASE_URL}images/work-1.jpg`}
                    title="Marketing"
                    description="NoCodeAPI"
                />
                <WorkItem
                    imageSrc={`${import.meta.env.BASE_URL}images/work-2.jpg`}
                    title="Creative Design"
                    description="UIdeck"
                />

                <WorkItem
                    imageSrc={`${import.meta.env.BASE_URL}images/work-3.jpg`}
                    title="Web Design"
                    description="GrayGrids"
                />

                <WorkItem
                    imageSrc={`${import.meta.env.BASE_URL}images/work-4.jpg`}
                    title="Analysis"
                    description="Ayro UI"
                />

                <WorkItem
                    imageSrc={`${import.meta.env.BASE_URL}images/work-5.jpg`}
                    title="SMM"
                    description="LineIcons"
                />

                <WorkItem
                    imageSrc={`${import.meta.env.BASE_URL}images/work-3.jpg`}
                    title="SEO"
                    description="PageBulb"
                />

                <WorkItem
                    imageSrc={`${import.meta.env.BASE_URL}images/work-4.jpg`}
                    title="Mobile App"
                    description="Rocket Internet LTD"
                />
            </div>
            <!-- row -->
        </div>
    </div>
    <!-- container -->
</section>

<style>
    .container {
        @apply px-4;
    }
    .row {
        @apply flex flex-wrap;
    }
    .section_title .sub_title {
        @apply text-base md:text-xl font-semibold text-theme-color;
    }
    .section_title .main_title {
        @apply text-2xl md:text-4xl font-bold mt-4;
    }
    .section_title p {
        @apply mt-5;
    }
</style>
